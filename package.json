{
  "name": "bootstrapper-react-template",
  "version": "1.0.0",
  "private": false,
  "dependencies": {
    "prop-types": "^15.6.2",
    "react": "^16.4.1",
    "react-dom": "^16.5.2",
    "react-jsx-parser": "^1.5.1",
    "react-router-dom": "^4.3.1"
  },
  "scripts": {
    "build": "rm -rf dist & webpack --config ./config/webpack.config.js --mode production",
    "build:css": "postcss --config config/postcss.config.js src/styles/index.css -o src/index.css",
    "initialize": "yarn && yarn build:css",
    "lint": "eslint --color -c ./config/.eslintrc.js '**/*.js'",
    "lint:file": "eslint --color -c ./config/.eslintrc.js",
    "start": "webpack-dev-server --config ./config/webpack.config.js --mode development",
    "test": "jest --config ./config/jest.config.js",
    "test:updatesnapshots": "jest --updateSnapshot",
    "verify": "yarn lint && yarn test",
    "watch:css": "postcss --config config/postcss.config.js src/styles/index.css -o src/index.css -w"
  },
  "devDependencies": {
    "@babel/core": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "autoprefixer": "^9.1.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.4.2",
    "babel-loader": "^8.0.4",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^1.0.0",
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16": "^1.6.0",
    "eslint": "^4.19.1",
    "eslint-config-get-off-my-lawn": "^4.0.1",
    "file-loader": "^2.0.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.6.0",
    "jest-enzyme": "^6.1.2",
    "jest-prop-type-error": "^1.1.0",
    "mini-css-extract-plugin": "^0.4.4",
    "postcss-cli": "^6.0.0",
    "postcss-loader": "^3.0.0",
    "react-hot-loader": "^4.3.11",
    "react-test-renderer": "^16.4.2",
    "style-loader": "^0.23.0",
    "tailwindcss": "^0.6.4",
    "url-loader": "^1.1.1",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.9"
  }
}
